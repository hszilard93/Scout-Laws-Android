                <!--android:text="@{viewModel.options.get(3).text}"-->
                <!--tools:text="A cserkész vidám és meggondolt." />-->
                <!--</LinearLayout>-->
            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>
    </android.support.constraint.ConstraintLayout>
</layout>
