<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/screen_splash</item>
    </style>

    <style name="SettingsTheme" parent="AppTheme">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <!-- Looks better this way -->
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <!-- This here stuff makes the TimePreferenceDialog's buttons work --><style name="SettingsTheme.DialogPreference">
    <item name="android:layout">@layout/preference_material</item>
    <item name="positiveButtonText">@string/ok_button</item>
    <item name="negativeButtonText">@string/cancel_button</item>
</style>

    <style name="PopupMenuListView" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">@android:color/black</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="QuizButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorTextLight</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:elevation">0dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
    </style>
</resources>
